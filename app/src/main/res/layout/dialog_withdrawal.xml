<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="18dp">

    <RelativeLayout
        android:id="@+id/ll_circle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <com.deshang.ttjx.framework.widget.CircleImageView
            android:id="@+id/header"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/withdrawal_wechat_logo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="Name"
        android:textColor="@color/gray_deep"
        android:textSize="@dimen/sp_big"
        android:visibility="gone" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:text=""
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_bigger" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/view"
            android:background="@mipmap/withdrawal_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="#F7C238"
            android:textSize="@dimen/sp_big" />


        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/view"
            android:background="@mipmap/withdrawal_sure"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_big" />

    </RelativeLayout>

</LinearLayout>