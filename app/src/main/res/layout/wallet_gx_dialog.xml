<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/gx_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="恭喜您"
            android:textColor="@color/tv_gray"
            android:textSize="@dimen/sp_bigger" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="成功卖出"
                android:textColor="@color/tv_gray"
                android:textSize="@dimen/sp_small" />

            <TextView
                android:id="@+id/tv_sale_hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_bigger" />

            <TextView
                android:id="@+id/tv_get_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="红钻，获得"
                android:textColor="@color/tv_gray"
                android:textSize="@dimen/sp_small" />

            <TextView
                android:id="@+id/tv_sale_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_bigger" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="元零钱"
                android:textColor="@color/tv_gray"
                android:textSize="@dimen/sp_small" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="零钱已存入账户余额！"
            android:textSize="@dimen/sp_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_neg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qu_tx"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small" />

            <ImageView
                android:id="@+id/iv_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88dp"
                android:src="@mipmap/zhuan_more"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sp_small"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ll_main"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:src="@mipmap/close_button" />

</RelativeLayout>