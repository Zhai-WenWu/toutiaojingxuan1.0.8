<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape_white_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@mipmap/withdrawal_finish"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="3dp"
        android:text="已完成"
        android:textColor="@color/tv_black" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tv_state"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:text="微信提现1元"
        android:textColor="@color/red_btn"
        android:textSize="@dimen/sp_big"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:text="2018-06-06 06:06"
        android:textColor="@color/gray_deep"
        android:textSize="@dimen/sp_smaller" />

</RelativeLayout>